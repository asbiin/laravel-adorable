{
    "name": "asbiin/laravel-adorable",
    "description": "Generate an Adorable Avatar for Laravel",
    "keywords": ["laravel", "php", "avatar", "adorable"],
    "type": "library",
    "license": "MIT",
    "support": {
        "issues": "https://github.com/monicahq/laravel-adorable/issues",
        "source": "https://github.com/monicahq/laravel-adorable"
    },
    "authors": [
        {
            "name": "Alexis Saettler",
            "email": "alexis@saettler.org"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0",
        "illuminate/support": "^8.0 || ^9.0 || ^10.0 || ^11.0",
        "intervention/image": "^2.7"
    },
    "require-dev": {
        "mockery/mockery": "^1.4",
        "larastan/larastan": "^1.0 || ^2.0",
        "orchestra/testbench": "^6.0 || ^7.0 || ^8.0 || ^9.0",
        "phpstan/phpstan-strict-rules": "^1.1",
        "phpunit/phpunit": "^11.0",
        "psalm/plugin-laravel": "^2.0",
        "vimeo/psalm": "^4.0 || ^5.6"
    },
    "autoload": {
        "psr-4": {
            "LaravelAdorable\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "LaravelAdorable\\Tests\\": "tests"
        }
    },
    "extra": {
        "laravel": {
            "aliases": {
                "LaravelAdorable": "LaravelAdorable\\Facades\\LaravelAdorable"
            },
            "providers": [
                "LaravelAdorable\\LaravelAdorableServiceProvider"
            ]
        }
    },
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        },
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
